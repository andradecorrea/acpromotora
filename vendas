<body>
  <form id="leadForm">
    <h2>Solicite sua Simulação</h2>
    <input type="text" name="nome" placeholder="Nome completo" required>
    <input type="text" name="cpf" placeholder="CPF" required>
    <input type="text" name="whatsapp" placeholder="WhatsApp" required>
    <button type="submit">Enviar</button>
  </form>

  <script>
    document.getElementById('leadForm').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const formData = new FormData(e.target);
      const data = {
        nome: formData.get('nome'),
        cpf: formData.get('cpf'),
        whatsapp: formData.get('whatsapp'),
        dataHora: new Date().toLocaleString()
      };

      fetch('https://script.google.com/macros/s/AKfycbwHskT_W7eYnKGdN8-SSVMH1euNbyvoSpmJ7DEzBmAcME6Obl1pLt_BLmdrcNRwXRo8rA/exec', {
        method: 'POST',
        body: JSON.stringify(data),
        headers: { 'Content-Type': 'application/json' }
      }).then(() => {
        window.location.href = "https://wa.me/5548996852424?text=Ol%C3%A1!%20Gostaria%20de%20uma%20simula%C3%A7%C3%A3o%20referente%20ao%20resgate%20FGTS.";
      });
    });
  </script>
